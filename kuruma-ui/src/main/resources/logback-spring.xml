<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <!--
        LOCAL
    -->
    <springProfile name="local">
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS,GMT+8}]%-5level %logger{72}[%L] - %msg%n</pattern>
            </encoder>
        </appender>

        <logger name="com.github.yingzhuo.kuruma" level="TRACE"/>
        <logger name="com.netflix.discovery" level="ERROR"/>
        <logger name="com.netflix.discovery.DiscoveryClient" level="OFF"/>
        <logger name="com.netflix.discovery.shared.transport.decorator.RedirectingEurekaHttpClient" level="OFF"/>

        <root level="INFO">
            <appender-ref ref="STDOUT"/>
        </root>
    </springProfile>

    <!--
        CLOUD
    -->
    <springProfile name="cloud">
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS,GMT+8}]%-5level %logger{72}[%L] - %msg%n</pattern>
            </encoder>
        </appender>

        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>/log/all.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>/log/old/daily_rolling.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
                <maxHistory>365</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS,GMT+8}]%-5level %logger{72}[%L] - %msg%n</pattern>
            </encoder>
        </appender>

        <logger name="com.github.yingzhuo.kuruma" level="TRACE"/>
        <logger name="com.netflix.discovery" level="ERROR"/>
        <logger name="com.netflix.discovery.DiscoveryClient" level="OFF"/>
        <logger name="com.netflix.discovery.shared.transport.decorator.RedirectingEurekaHttpClient" level="OFF"/>

        <root level="INFO">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

</configuration>
